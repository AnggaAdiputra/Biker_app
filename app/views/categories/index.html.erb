<h1 class='white'>Listing categories</h1>

<table class='white bold'>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    
      <td>
        <div class="btn-group">
          <%= link_to 'Show', category, class:'btn btn-success' %>
          <%= link_to 'Edit', edit_category_path(category), class:'btn btn-info' %>
          <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger'%>
        </div>
      </td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Category', new_category_path, class: 'btn' %>
