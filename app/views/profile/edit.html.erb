<%= form_for @user, url: profile_path(@user), html: { multipart: true } do |f| %>

<table>
		<tr>
			<td class='white'>
			 Name
			</td>

			<td>
				:
			</td>

			<td>
				<%= f.text_field :name %>
			</td>
		</tr>

		<tr>
			<td class='white'>
				Email Address
			</td>

			<td>
				:
			</td>

			<td>
				<%= f.text_field :email %>
			</td>
		</tr>

		<tr>
			<td class='white' >
				Location
			</td>

			<td>
				:
			</td>

			<td>
				<%= f.text_field :location %>
			</td>
		</tr>

		<tr>
			<td class='white' >
				Gender
			</td>

			<td>
				:
			</td>

			<td>
				<%= select :user, :gender, [['laki-laki', 'Male'], ['wanita', 'Female']] %>
			</td>
		</tr>
		<tr>
			<td class='white' >
				Avatar
			</td>

			<td>
				:
			</td>

			<td>
				<%= f.file_field :image %>
			</td>
		</tr>
	</table>

	<%= f.submit 'Update Profile', class: 'btn btn-primary' %>
	<%= f.submit 'Cancel', class: 'btn btn-danger' %>
	<%  end %>

<h6 class='logosettings white'><em>Biker's Trip</em></h6>

