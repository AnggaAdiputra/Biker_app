<div class='row-fluid'>
	<div class='menubar-container'>
		<div class='span2'>
			<%= link_to 'News Feed', (controller_name == 'main' ? '#' : main_index_path), 
				class:"btn btn-large btn-block btn-info #{(controller_name == 'main' ? 'disabled' : '')}" %>
		</div>
		<div class='span2'>
			<%= link_to 'Lets Ride', new_route_path, class:"btn btn-large btn-block btn-success" %>
		</div>
		<div class='span2'>
			<%= link_to 'User', (controller_name == 'users' ? '#' : user_path(current_user)), 
				class:"btn btn-large btn-block btn-info #{(controller_name == 'users' ? 'disabled' : '')}" %>
		</div>
		<div class='span2'>
			<%= link_to 'Log out', destroy_user_session_path, class:"btn btn-large btn-block btn-danger", method: :delete %>
			</div>
		<div class='span4'>
			<form class="form-search nav-search-form">
	  		<input type="text" class="input-medium search-query">
	  		<button type="submit" class="btn btn-success">Search</button>
			</form>
			<div class='clearer'></div>
		</div>
	</div>
</div>