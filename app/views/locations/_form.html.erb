<% if @location.errors.present? %>
<ul>
	<% @location.errors.full_messages.each do |message| %>
	<li> <%= message %> </li>
	<% end %>
</ul>
<% end %>

<%= form_for @location do |f| %>

<table>
 <tr>
	<td>name</td>
	<td>:</td>
	<td> <%= f.text_field :name %> </td>
 </tr>

  <tr>
	 <td>latitude</td>
	 <td>:</td>
	 <td> <%= f.text_field :latitude %> </td>
  </tr>

   <tr>
	  <td>longitude</td>
	  <td>:</td>
	  <td> <%= f.text_field :longitude %> </td>
   </tr>

  <tr>
   <td>category</td>
   <td>:</td>
   <td> <%= f.collection_select :category_id, Category.all, :id, :name %> </td>
  </tr>

  <tr>
   <td>regional</td>
   <td>:</td>
   <td> <%= f.collection_select :regional_id, Regional.all, :id, :name %> </td>
  </tr>

	 <tr>
	 	<td colspan='3'> <%= f.submit %>
	 </tr>



</table>
<% end %>