<%= form_for @route, html: {multipart: true} do |f| %>
	<table>
		<tr>
			<td class='white'>
				Route Name
			</td>

			<td>
				:
			</td>

			<td>
				<%= f.text_field :name %>
			</td>
		</tr>

		<tr>
			<td class='white'>
				Start Location
			</td>

			<td>
				:
			</td>

			<td>
				<%= f.collection_select :start_location_id, StartLocation.all, :id, :name %>
			</td>
		</tr>

		<tr>
			<td class='white'>
				End Location
			</td>

			<td>
				:
			</td>

			<td>
				<%= f.collection_select :end_location_id, EndLocation.all, :id, :name %>
			</td>
		</tr>

		<tr class='white'>
			<td>Image</td>
			<td> : </td>
			<td><%= f.file_field :image %></td>
    </tr>
  </table>

<%= f.submit 'Let\'s Ride', class: 'btn btn-success' %>

<% end %>
